<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.project.volleyball.MemberMapper">
	<insert id="insert">
		insert into member(userid,passwd,email,zip,addr1,addr2,filename) 
		values(#{userid},#{passwd},#{email},#{zip},#{addr1},#{addr2},#{filename})
	</insert>
	
	<select id="selectOne" resultType="MemberDTO">
		select * from member 
		where userid=#{userid}
	</select>
	
	<update id="updateEmailAuth">
		update member set emailauth='1' 
		where userid=#{userid}
	</update>
	
	<update id="update">
		update member 
		set passwd=#{passwd},email=#{email},zip=#{zip},addr1=#{addr1},addr2=#{addr2},filename=#{filename} 
		where userid=#{userid}
	</update>
</mapper>