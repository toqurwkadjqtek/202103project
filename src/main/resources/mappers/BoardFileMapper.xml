<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.project.volleyball.BoardFileMapper">
	<insert id="insert">
		<selectKey keyProperty="fnum" resultType="int" order="BEFORE">
			select ifnull(max(fnum)+1,1) from boardfile
		</selectKey>
		insert into boardfile(fnum,bnum,filename) 
		values(#{fnum},#{bnum},#{filename})
	</insert>
	
	<select id="selectList" resultType="BoardFileDTO">
		select * from boardfile 
		where bnum=#{bnum}
	</select>
	
	<select id="selectOne" resultType="BoardFileDTO">
		select * from boardfile 
		where fnum=#{fnum}
	</select>
	
	<delete id="delete">
		delete from boardfile 
		where fnum=#{fnum}
	</delete>
	
	<delete id="deleteBoard">
		delete from boardfile 
		where bnum=#{bnum}
	</delete>
</mapper>